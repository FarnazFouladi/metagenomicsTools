# modded from https://benjjneb.github.io/dada2/tutorial.html

rm(list=ls())

library(dada2); packageVersion("dada2")

setwd("C:\\lactoCheck\\Escherichia_Shigella")
path <- "C:\\lactoCheck\\Escherichia_Shigella"
list.files(path)

fnFs <- sort(list.files(path, pattern=".fastq"))

sample.names <- vector()

for( i in 1:length(fnFs))
{
	sample.names[i] <- 	gsub(".fastq", "" ,fnFs[i])
}


fnFs <- file.path(path, fnFs)

#plotQualityProfile(fnFs[1:10])

filt_path <- file.path(path, "filtered") # Place filtered files in filtered/ subdirectory
filtFs <- file.path(filt_path, paste0(sample.names, "_F_filt.fastq.gz"))

out <- filterAndTrim(fnFs, filtFs, truncLen=c(240),
              maxN=0, maxEE=c(2), truncQ=2, rm.phix=TRUE,
              compress=TRUE, multithread=FALSE) # On Windows set multithread=FALSE
head(out)
write.table(out, file="readSummary.txt")